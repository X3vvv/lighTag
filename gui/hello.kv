#:kivy 2.1.0
#:import utils kivy.utils
<MyGridLayout>

    name: username  # object: id
    pwd: password  # object: id

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Username"
            TextInput:
                id: username
                multiline: False
                # background_normal: ''  # get rid of original grey layer, to not affect bg color
                # background_color: utils.get_color_from_hex('#FFDCAE')

            Label:
                text: "Password"
            TextInput:
                id: password
                multiline: False
                password: True
                # background_normal: ''  # get rid of original grey layer, to not affect bg color
                # background_color: utils.get_color_from_hex('#FFDCAE')

        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            background_normal: ''  # get rid of original grey layer, to not affect bg color
            # background_color: (118/255.0, 186/255.0, 153/255.0, 1)
            background_color: utils.get_color_from_hex('#76BA99')


