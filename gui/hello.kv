#:kivy 2.1.0
#:import utils kivy.utils
<MyLayout>

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical" # "horizontal"

        spacing: 6
        padding: 10

        Button:
            text: "Hello world!"

        Button:
            text: "Goodbye world!"
            size_hint: (None, None)
            width: 100
            height: 50

        Button:
            text: "Good night world!"
            pos_hint: {'center_x': 0.5}
            size_hint: (.3, .1) # keep the scale: (width, height)


