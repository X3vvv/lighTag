#:kivy 2.1.0

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calcInput
            text: "0"
            # haligh: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "%"

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "CE"

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                id: clearButton
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"

                

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "X"

                

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"

                

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.add()

                

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
                background_color: (157/255, 157/255, 157/255, 1)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                background_color: (157/255, 157/255, 157/255, 1)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
