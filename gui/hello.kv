#:kivy 2.1.0

<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: nameLabel
            text: "What's your name?"
            font_size: 32

        TextInput:
            id: nameInput
            multiline: False
            size_hint: (1, .5)

        Button:
            id: submitButton
            text: "Submit"
            size_hint: (1, .5)
            font_size: 32
            on_press: root.press()


