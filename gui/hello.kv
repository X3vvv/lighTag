#:kivy 2.1.0

<Button>
    font_size: 24

<MyLayout>
    FloatLayout:
        size: root.width, root.height

        Label:
            id: showLabel
            text: "0"
            size_hint: (1, .15)
            font_size: 48
            pos_hint: {"top": 1, "left": 0}
            background_color: (.95, .95, .95, 1)
            # no annotations allowed inside canvas.before
            canvas.before: 
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,0,0,1) # text color

        # line 1: %, CE, C, /
        Button:
            text: "%"
            on_press: root.press(self.text)
            # size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            size_hint: (1 / 4, .16)
            pos_hint: {"x": 0, "top": .85}
        Button:
            text: "CE"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": self.size_hint[0] * 1, "top": 1 - showLabel.size_hint[1]}
        Button:
            text: "C"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 2, "top": 1 - showLabel.size_hint[1]}
        Button:
            text: "/"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 3, "top": 1 - showLabel.size_hint[1]}

        # line 2: 7, 8, 9, X
        Button:
            text: "7"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": 0, "top": 1 - showLabel.size_hint[1]*2}
        Button:
            text: "8"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": self.size_hint[0] * 1, "top": 1 - showLabel.size_hint[1]*2}
        Button:
            text: "9"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 2, "top": 1 - showLabel.size_hint[1]*2}
        Button:
            text: "X"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 3, "top": 1 - showLabel.size_hint[1]*2}

        # line 3: 4, 5, 6, -
        Button:
            text: "4"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": 0, "top": 1 - showLabel.size_hint[1]*3}
        Button:
            text: "5"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": self.size_hint[0] * 1, "top": 1 - showLabel.size_hint[1]*3}
        Button:
            text: "6"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 2, "top": 1 - showLabel.size_hint[1]*3}
        Button:
            text: "-"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 3, "top": 1 - showLabel.size_hint[1]*3}

        # line 4: 1, 2, 3, +
        Button:
            text: "1"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": 0, "top": 1 - showLabel.size_hint[1]*4}
        Button:
            text: "2"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": self.size_hint[0] * 1, "top": 1 - showLabel.size_hint[1]*4}
        Button:
            text: "3"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 2, "top": 1 - showLabel.size_hint[1]*4}
        Button:
            text: "+"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 3, "top": 1 - showLabel.size_hint[1]*4}

        # line 5: +/-, 0, ., =
        Button:
            text: "+/-"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": 0, "top": 1 - showLabel.size_hint[1]*5}
        Button:
            text: "0"
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x": self.size_hint[0] * 1, "top": 1 - showLabel.size_hint[1]*5}
        Button:
            text: "."
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 2, "top": 1 - showLabel.size_hint[1]*5}
        Button:
            text: "="
            on_press: root.press(self.text)
            size_hint: (1 / 4, (1-showLabel.size_hint[1]) / 5)
            pos_hint: {"x":  self.size_hint[0] * 3, "top": 1 - showLabel.size_hint[1]*5}



